{
    "name": "@canton-network/clients-remote",
    "version": "0.0.1",
    "description": "",
    "private": true,
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc -b; tsc -b tsconfig.frontend.json && yarn db:migrate:reset && yarn db:bootstrap",
        "docker:build": "yarn pack -o ./docker/target/package.tgz && cd docker && docker build --progress plain .",
        "clean": "tsc -b --clean && rm -rf ./dist ./docker/target && rm ./store.sqlite || true",
        "dev": "tsx watch src --include *.config.ts --include *.json src/index.ts | pino-pretty",
        "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
        "start": "yarn node dist/index.js",
        "debug": "yarn node --inspect-brk dist/index.js",
        "db:bootstrap": "tsx ./src/scripts/db.ts bootstrap",
        "db:migrate:up": "tsx ./src/scripts/db.ts up",
        "db:migrate:down": "tsx ./src/scripts/db.ts down",
        "db:migrate:status": "tsx ./src/scripts/db.ts status",
        "db:migrate:reset": "tsx ./src/scripts/db.ts reset"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@canton-network/core-ledger-client": "workspace:^",
        "@canton-network/core-rpc-errors": "workspace:^",
        "@canton-network/core-signing-internal": "workspace:^",
        "@canton-network/core-signing-lib": "workspace:^",
        "@canton-network/core-signing-participant": "workspace:^",
        "@canton-network/core-tx-visualizer": "workspace:^",
        "@canton-network/core-types": "workspace:^",
        "@canton-network/core-wallet-auth": "workspace:^",
        "@canton-network/core-wallet-dapp-rpc-client": "workspace:^",
        "@canton-network/core-wallet-store": "workspace:^",
        "@canton-network/core-wallet-store-sql": "workspace:^",
        "@canton-network/core-wallet-ui-components": "workspace:^",
        "@canton-network/core-wallet-user-rpc-client": "workspace:^",
        "@commander-js/extra-typings": "^14.0.0",
        "commander": "^14.0.1",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.1",
        "jose": "^6.0.12",
        "lit": "^3.3.0",
        "pino": "^9.7.0",
        "socket.io": "^4.8.1",
        "uuid": "^11.1.0",
        "vite-express": "^0.21.1",
        "zod": "^3.25.64"
    },
    "devDependencies": {
        "@canton-network/core-wallet-store-inmemory": "workspace:^",
        "@jest/globals": "^29.0.0",
        "@swc/core": "^1.11.31",
        "@swc/jest": "^0.2.38",
        "@types/cors": "^2",
        "@types/express": "^5.0.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.30",
        "@types/supertest": "^6.0.3",
        "jest": "^29.7.0",
        "pino-pretty": "^13.0.0",
        "pino-test": "^1.1.0",
        "supertest": "^7.1.1",
        "ts-jest-resolver": "^2.0.1",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "vite": "^6.3.5"
    },
    "nx": {
        "targets": {
            "start": {
                "dependsOn": [
                    "build"
                ]
            }
        }
    }
}
