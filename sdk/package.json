{
    "name": "splice-wallet-sdk",
    "type": "module",
    "version": "0.0.1",
    "description": "Connects your splice dApp to Wallet Client users",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "yarn generate && tsc -b",
        "dev": "tsc -b --watch",
        "clean": "tsc -b --clean; rm -rf dist",
