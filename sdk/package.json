    "license": "Apache-2.0",
    "dependencies": {
        "core-wallet-dapp-rpc-client": "workspace:^",
        "splice-provider": "workspace:^",
        "wallet-ui-components": "workspace:^"
    },
    "devDependencies": {
        "@open-rpc/client-js": "^1.8.1",
        "@open-rpc/generator": "^2.0.0",
        "typescript": "^5.8.3"
    }
}
