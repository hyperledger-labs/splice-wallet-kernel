{
    "name": "@canton-network/wallet-gateway-remote",
    "version": "0.16.0",
    "description": "A server-side Wallet Gateway implementation over HTTP",
    "main": "dist/index.js",
    "bin": {
        "wallet-gateway": "dist/index.js",
        "wallet-gateway-remote": "dist/index.js"
    },
    "type": "module",
    "scripts": {
        "build": "vite build && tsc -b && tsc -b tsconfig.frontend.json",
        "clean": "tsc -b --clean && rm -rf ./dist && rm ./*.sqlite || true",
        "dev": "NODE_ENV=development tsx watch src/index.ts -f pretty -c ../test/config.json",
        "test": "yarn node --trace-warnings --experimental-vm-modules $(yarn bin jest)",
        "start": "yarn node dist/index.js -c ../test/config.json",
        "debug": "yarn node --inspect-brk dist/index.js -c ../test/config.json",
        "flatpack": "yarn pack --out \"$FLATPACK_OUTDIR\"",
        "db:bootstrap": "tsx ./src/index -c ../test/config.json db bootstrap",
        "db:migrate:up": "tsx ./src/index -c ../test/config.json db up",
        "db:migrate:down": "tsx ./src/index -c ../test/config.json db down",
        "db:migrate:status": "tsx ./src/index -c ../test/config.json db status",
        "db:migrate:reset": "tsx ./src/index -c ../test/config.json db reset"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@canton-network/core-ledger-client": "workspace:^",
        "@canton-network/core-rpc-errors": "workspace:^",
        "@canton-network/core-rpc-transport": "workspace:^",
        "@canton-network/core-signing-blockdaemon": "workspace:^",
        "@canton-network/core-signing-fireblocks": "workspace:^",
        "@canton-network/core-signing-internal": "workspace:^",
        "@canton-network/core-signing-lib": "workspace:^",
        "@canton-network/core-signing-participant": "workspace:^",
        "@canton-network/core-signing-store-sql": "workspace:^",
        "@canton-network/core-tx-visualizer": "workspace:^",
        "@canton-network/core-types": "workspace:^",
        "@canton-network/core-wallet-auth": "workspace:^",
        "@canton-network/core-wallet-dapp-rpc-client": "workspace:^",
        "@canton-network/core-wallet-store": "workspace:^",
        "@canton-network/core-wallet-store-sql": "workspace:^",
        "@canton-network/core-wallet-ui-components": "workspace:^",
        "@canton-network/core-wallet-user-rpc-client": "workspace:^",
        "@commander-js/extra-typings": "^14.0.0",
        "commander": "^14.0.2",
        "cors": "^2.8.5",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "jose": "^6.1.3",
        "lit": "^3.3.2",
        "pino": "^10.2.1",
        "pino-pretty": "^13.1.3",
        "socket.io": "^4.8.3",
        "uuid": "^11.1.0",
        "vite": "^7.3.1",
        "vite-express": "^0.22.0",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@canton-network/core-wallet-store-inmemory": "workspace:^",
        "@jest/globals": "^30.2.0",
        "@swc/core": "^1.15.10",
        "@swc/jest": "^0.2.39",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.10",
        "@types/supertest": "^6.0.3",
        "jest": "^30.2.0",
        "pino-test": "^1.1.0",
        "supertest": "^7.2.2",
        "ts-jest-resolver": "^2.0.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "nx": {
        "targets": {
            "start": {
                "dependsOn": [
                    "build"
                ]
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hyperledger-labs/splice-wallet-kernel.git",
        "directory": "wallet-gateway/remote"
    }
}
