{
    "name": "splice-wallet-kernel",
    "scripts": {
        "start:all": "yarn pm2 start ecosystem.config.js --env development",
        "start:canton": "tsx ./scripts/src/start-canton.ts",
        "start:localnet": "tsx ./scripts/src/start-localnet.ts start",
        "start:canton:console": ".canton/bin/canton --config canton/canton.conf --bootstrap canton/bootstrap.canton",
        "stop:all": "yarn pm2 stop all",
        "stop:localnet": "tsx ./scripts/src/start-localnet.ts stop",
        "generate:dapp": "yarn workspace @canton-network/core-rpc-generator build && open-rpc-generator generate -c ./rpc-generator-config-dapp.json",
        "generate:user": "yarn workspace @canton-network/core-rpc-generator build && open-rpc-generator generate -c ./rpc-generator-config-user.json",
        "generate:signing": "yarn workspace @canton-network/core-rpc-generator build && open-rpc-generator generate -c ./rpc-generator-config-signing.json",
        "generate:grpc": "tsx ./scripts/src/generate-protobufs.ts",
        "generate:all": "yarn generate:dapp && yarn generate:user && yarn generate:signing",
        "build:all": "yarn workspaces foreach -A -t run build",
        "clean:all": "yarn workspaces foreach -A run clean",
        "test:all": "yarn workspaces foreach -A run test",
        "postinstall": "husky",
        "script:cleancoding": "tsx ./scripts/src/clean-coding.ts",
        "script:generate:ledger": "tsx ./scripts/src/generate-ledger-client.ts",
        "script:generate:protobufs": "tsx ./scripts/src/generate-protobufs.ts",
        "script:generate:tokenstandard": "tsx ./scripts/src/generate-token-standard.ts",
        "script:generate:tokenstandardclients": "tsx ./scripts/src/generate-token-standard-clients.ts",
        "script:generate:scan": "tsx ./scripts/src/generate-scan-client.ts",
        "script:fetch:canton": "tsx ./scripts/src/fetch-canton.ts",
        "script:fetch:splice": "tsx ./scripts/src/fetch-splice.ts",
        "script:fetch:splice-specs": "tsx ./scripts/src/fetch-splice-specs.ts",
        "script:fetch:ledger": "tsx ./scripts/src/fetch-ledger-api-specs.ts",
        "script:fetch:localnet": "tsx ./scripts/src/fetch-localnet.ts",
        "script:openrpc:titles": "tsx ./scripts/src/schema-title-validation.ts",
        "full:rebuild": "yarn clean:all && yarn generate:all && yarn build:all",
        "release": "tsx ./scripts/src/release.ts"
    },
    "workspaces": [
        "api-specs",
        "clients/*",
        "core/**",
        "example",
        "example-scripts",
        "sdk/*",
        "scripts",
        "mock-oauth2",
        "docs/wallet-integration-guide/examples"
    ],
    "devDependencies": {
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/compat": "^1.2.9",
        "@eslint/js": "^9.28.0",
        "@open-rpc/generator": "^2.0.0",
        "@protobuf-ts/plugin": "^2.11.1",
        "@swc-node/register": "^1.11.1",
        "@swc/core": "^1.13.4",
        "commitlint": "^19.8.1",
        "eslint": "^9.28.0",
        "eslint-plugin-headers": "^1.3.3",
        "globals": "^16.2.0",
        "grpc-tools": "^1.13.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.0",
        "oauth2-mock-server": "^8.1.0",
        "pm2": "^6.0.8",
        "prettier": "^3.5.3",
        "ts-proto": "^2.7.7",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.33.1"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown",
        "*.{ts,tsx,js,jsx,mjs,cjs}": "eslint --fix"
    },
    "resolutions": {
        "@daml.js/daml-prim-DA-Exception-ArithmeticError-1.0.0": "workspace:^",
        "@daml.js/daml-prim-DA-Exception-AssertionFailed-1.0.0": "workspace:^",
        "@daml.js/daml-prim-DA-Exception-GeneralError-1.0.0": "workspace:^",
        "@daml.js/daml-prim-DA-Exception-PreconditionFailed-1.0.0": "workspace:^",
        "@daml.js/daml-prim-DA-Types-1.0.0": "workspace:^",
        "@daml.js/daml-prim-GHC-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Date-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Internal-Down-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Logic-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Monoid-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-NonEmpty-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Random-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Semigroup-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Set-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Stack-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Time-Types-1.0.0": "workspace:^",
        "@daml.js/daml-stdlib-DA-Validation-Types-1.0.0": "workspace:^",
        "@daml.js/ghc-stdlib-DA-Internal-Template-1.0.0": "workspace:^",
        "@daml.js/token-standard-models-1.0.0": "workspace:^"
    },
    "packageManager": "yarn@4.9.4",
    "dependencies": {
        "@nx/js": "^21.3.11",
        "nx": "^21.3.11"
    }
}
