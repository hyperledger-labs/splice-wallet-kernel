{
    "name": "@canton-network/core-signing-lib",
    "version": "0.9.0",
    "type": "module",
    "description": "Core library for signing driver implementations",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "packageManager": "yarn@4.9.4",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup && tsc -b tsconfig.types.json",
        "dev": "tsup --watch --onSuccess \"tsc -b tsconfig.types.json\"",
        "clean": "tsc -b --clean && rm -rf ./dist"
    },
    "dependencies": {
        "@canton-network/core-wallet-auth": "workspace:^",
        "fs-extra": "^11.3.0",
        "lodash": "^4.17.21",
        "tweetnacl": "^1.0.3",
        "tweetnacl-util": "^0.15.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^11",
        "@types/lodash": "^4.17.17",
        "@types/node": "^22.15.29",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    },
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
