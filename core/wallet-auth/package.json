{
    "name": "@canton-network/core-wallet-auth",
    "version": "0.7.0",
    "type": "module",
    "description": "Provides authentication middleware and user management for the Wallet Gateway",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "author": "Marc Juchli <marc.juchli@digitalasset.com>",
    "packageManager": "yarn@4.9.4",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup && tsc -b tsconfig.types.json",
        "dev": "tsup --watch --onSuccess \"tsc -b tsconfig.types.json\"",
        "clean": "tsc -b --clean; rm -rf dist",
        "test": "yarn node --experimental-vm-modules $(yarn bin jest) --passWithNoTests"
    },
    "devDependencies": {
        "@jest/globals": "^29.0.0",
        "@swc/core": "^1.11.31",
        "@swc/jest": "^0.2.38",
        "@types/jest": "^30.0.0",
        "jest": "^30.0.0",
        "ts-jest": "^29.4.0",
        "ts-jest-resolver": "^2.0.1",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@canton-network/core-rpc-errors": "workspace:^",
        "@canton-network/core-types": "workspace:^"
    },
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
