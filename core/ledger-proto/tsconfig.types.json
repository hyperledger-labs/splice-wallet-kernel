{
    "extends": "../../tsconfig.node.json",
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "outDir": "./dist/types",

        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "noEmit": false,
        "composite": false
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["**/*.test.*", "**/*.spec.*", "**/__tests__/**"]
}
