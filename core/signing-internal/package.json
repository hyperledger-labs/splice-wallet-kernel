{
    "name": "@canton-network/core-signing-internal",
    "version": "0.10.0",
    "type": "module",
    "description": "Wallet Gateway driver for offline Ed25519 keypairs",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "packageManager": "yarn@4.9.4",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup && tsc -p tsconfig.types.json",
        "dev": "tsup --watch --onSuccess \"tsc -p tsconfig.types.json\"",
        "clean": "tsc -b --clean && rm -rf ./dist",
        "flatpack": "yarn pack --out \"$FLATPACK_OUTDIR\"",
        "test": "yarn node --experimental-vm-modules $(yarn bin jest)"
    },
    "dependencies": {
        "@canton-network/core-signing-lib": "workspace:^",
        "@canton-network/core-signing-store-sql": "workspace:^",
        "@canton-network/core-wallet-auth": "workspace:^",
        "fs-extra": "^11.3.0",
        "lodash": "^4.17.21",
        "pino": "^10.0.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.0.0",
        "@swc/core": "^1.11.31",
        "@swc/jest": "^0.2.38",
        "@types/fs-extra": "^11",
        "@types/jest": "^29.5.14",
        "@types/lodash": "^4.17.17",
        "@types/node": "^22.15.29",
        "jest": "^29.7.0",
        "pino-test": "^1.1.0",
        "ts-jest-resolver": "^2.0.1",
        "tsup": "^8.5.0",
        "tweetnacl": "^1.0.3",
        "tweetnacl-util": "^0.15.1",
        "typescript": "^5.8.3"
    },
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
