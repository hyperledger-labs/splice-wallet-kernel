{
    "extends": "../../tsconfig.node.json",
    "lib": ["ES2015"],
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2022",
        "strict": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "declarationDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "composite": true
    },
    "typedocOptions": {
        "name": "generated client",
        "entryPoints": ["./src/index.ts"],
        "out": "docs",
        "readme": "./README.md",
        "exclude": [
            "node_modules",
            "docs",
            "dist",
            "jest.config.js",
            "src/*.test.ts",
            "src/**/*.test.ts"
        ]
    }
}
