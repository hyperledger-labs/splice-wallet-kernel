{
    "name": "@canton-network/core-wallet-dapp-remote-rpc-client",
    "version": "0.4.0",
    "type": "module",
    "description": "TypeScript client generated by OpenRPC",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build:old": "tsc && typedoc src/index.ts --out docs --excludeExternals --excludePrivate --hideGenerator --readme none",
        "build": "tsup && tsc -b tsconfig.types.json && yarn run docs",
        "docs": "typedoc --tsconfig tsconfig.docs.json --entryPoints src/index.ts --out docs --excludeExternals --excludePrivate --hideGenerator --readme none",
        "dev": "tsc -b --watch",
        "clean": "tsc -b --clean; rm -rf dist"
    },
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@canton-network/core-types": "workspace:^",
        "lodash": "^4.17.15"
    },
    "devDependencies": {
        "@types/isomorphic-fetch": "^0.0.39",
        "@types/jest": "^29.5.12",
        "@types/json-schema": "7.0.3",
        "@types/lodash": "^4.14.149",
        "@types/ws": "^6.0.1",
        "globals": "^16.0.0",
        "prettier": "^3.5.2",
        "tsup": "^8.5.0",
        "typedoc": "^0.28.14",
        "typescript": "^5.0.0"
    }
}
