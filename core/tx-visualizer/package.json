{
    "name": "@canton-network/core-tx-visualizer",
    "version": "0.10.0",
    "type": "module",
    "description": "Decode and visualize prepared transactions from Canton",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "packageManager": "yarn@4.9.4",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup && tsc -p tsconfig.types.json",
        "dev": "tsup --watch --onSuccess \"tsc -p tsconfig.types.json\"",
        "flatpack": "yarn pack --out \"$FLATPACK_OUTDIR\"",
        "test": "jest --passWithNoTests",
        "clean": "tsc -b --clean; rm -rf dist"
    },
    "devDependencies": {
        "@jest/globals": "^29.0.0",
        "@swc/core": "^1.13.3",
        "@swc/jest": "^0.2.38",
        "@types/jest": "^30.0.0",
        "globals": "^16.0.0",
        "jest": "^30.0.0",
        "ts-jest": "^29.4.0",
        "ts-jest-resolver": "^2.0.1",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@canton-network/core-ledger-proto": "workspace:^",
        "@types/node": "^22.15.30",
        "camelcase-keys": "^9.1.3"
    },
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
