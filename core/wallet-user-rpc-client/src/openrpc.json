{
    "openrpc": "1.2.6",
    "info": {
        "title": "Splice Wallet JSON-RPC User API",
        "version": "0.1.0",
        "description": "An OpenRPC specification for the user to interact with the Wallet Gateway."
    },
    "methods": [
        {
            "name": "addNetwork",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "AddNetworkParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "network": {
                                "$ref": "#/components/schemas/Network"
                            }
                        },
                        "required": ["network"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            },
            "description": "Adds a new network configuration (similar to EIP-3085)."
        },
        {
            "name": "removeNetwork",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "RemoveNetworkParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "networkName": {
                                "title": "networkName",
                                "type": "string",
                                "description": "Ledger api url"
                            }
                        },
                        "required": ["networkName"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            },
            "description": "Removes a new network configuration (similar to EIP-3085)."
        },
        {
            "name": "listNetworks",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "ListNetworksResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "networks": {
                            "title": "networks",
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Network"
                            }
                        }
                    },
                    "required": ["networks"]
                }
            }
        },
        {
            "name": "addIdp",
            "description": "Adds a new identity provider.",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "AddIdpParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "idp": {
                                "$ref": "#/components/schemas/Idp"
                            }
                        },
                        "required": ["idp"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            }
        },
        {
            "name": "removeIdp",
            "description": "Removes an identity provider. Fails if an existing network is using the identity provider.",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "RemoveIdpParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "identityProviderId": {
                                "title": "identityProviderId",
                                "type": "string",
                                "description": "Identity Provider ID"
                            }
                        },
                        "required": ["identityProviderId"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            }
        },
        {
            "name": "listIdps",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "ListIdpsResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "idps": {
                            "title": "idps",
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Idp"
                            }
                        }
                    },
                    "required": ["idps"]
                }
            }
        },
        {
            "name": "createWallet",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "CreateWalletParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "primary": {
                                "title": "primary",
                                "type": "boolean",
                                "description": "Set as primary wallet for dApp usage."
                            },
                            "partyHint": {
                                "title": "partyHint",
                                "type": "string",
                                "description": "The party hint and name of the wallet."
                            },
                            "signingProviderId": {
                                "title": "signingProviderId",
                                "type": "string",
                                "description": "The signing provider ID the wallet corresponds to."
                            },
                            "signingProviderContext": {
                                "description": "Indicates that the wallet has been created in the database but hasn't yet been allocated by the participant.",
                                "$ref": "#/components/schemas/SigningProviderContext"
                            }
                        },
                        "required": [
                            "partyHint",
                            "networkId",
                            "signingProviderId"
                        ]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "CreateWalletResult",
                    "type": "object",
                    "properties": {
                        "wallet": {
                            "description": "The newly created or updated wallet. Omitted when walletRemoved is set.",
                            "$ref": "#/components/schemas/Wallet"
                        },
                        "walletRemoved": {
                            "description": "Present when the wallet was removed because the external signing transaction failed or was rejected.",
                            "$ref": "#/components/schemas/WalletRemovedInfo"
                        }
                    }
                }
            },
            "description": "Allocates a new wallet and party with the given hint."
        },
        {
            "name": "setPrimaryWallet",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "SetPrimaryWalletParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "partyId": {
                                "title": "partyId",
                                "type": "string",
                                "description": "The party id of the wallet to set as primary."
                            }
                        },
                        "required": ["partyId"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            },
            "description": "Sets the specified wallet as the primary wallet for dApp usage."
        },
        {
            "name": "removeWallet",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "RemoveWalletParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "partyId": {
                                "title": "partyId",
                                "type": "string",
                                "description": "The party id of the wallet to be removed."
                            }
                        },
                        "required": ["partyId"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "RemovePartyResult",
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "description": "Removes a party with the given hint."
        },
        {
            "name": "listWallets",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "ListWalletsParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "filter": {
                                "title": "WalletFilter",
                                "type": "object",
                                "description": "Filter for the wallets to be returned.",
                                "$ref": "#/components/schemas/WalletFilter"
                            }
                        },
                        "required": []
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "ListWalletsResult",
                    "type": "array",
                    "items": {
                        "$ref": "#/components/schemas/Wallet"
                    },
                    "description": "An array of wallets that match the filter criteria."
                }
            },
            "description": "Lists wallets."
        },
        {
            "name": "syncWallets",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "SyncWalletsResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "added": {
                            "title": "added",
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Wallet"
                            }
                        },
                        "removed": {
                            "title": "removed",
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Wallet"
                            }
                        }
                    },
                    "required": ["added", "removed"],
                    "description": "Added and removed wallets as a result of the sync."
                }
            },
            "description": "Synchronizes wallets with the connected network."
        },
        {
            "name": "isWalletSyncNeeded",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "IsWalletSyncNeededResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "walletSyncNeeded": {
                            "title": "walletSyncNeeded",
                            "type": "boolean",
                            "description": "Whether wallet sync is needed. Returns true if there are disabled wallets or parties on the ledger that aren't in the store."
                        }
                    },
                    "required": ["walletSyncNeeded"]
                }
            },
            "description": "Checks if wallet sync is needed (disabled wallets or new parties on ledger)."
        },
        {
            "name": "sign",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "SignParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "preparedTransaction": {
                                "title": "preparedTransaction",
                                "type": "string"
                            },
                            "preparedTransactionHash": {
                                "title": "preparedTransactionHash",
                                "type": "string"
                            },
                            "commandId": {
                                "$ref": "api-specs/openrpc-dapp-api.json#/components/schemas/CommandId"
                            },
                            "partyId": {
                                "title": "partyId",
                                "type": "string"
                            }
                        },
                        "required": [
                            "preparedTransactionHash",
                            "preparedTransaction",
                            "commandId",
                            "partyId"
                        ]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "SignResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "signature": {
                            "title": "signature",
                            "type": "string"
                        },
                        "partyId": {
                            "title": "partyId",
                            "type": "string"
                        },
                        "signedBy": {
                            "title": "signedBy",
                            "type": "string"
                        }
                    },
                    "required": ["signature", "partyId", "signedBy"]
                }
            },
            "description": "Signs the provided data with the private key of the specified or active party."
        },
        {
            "name": "execute",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "ExecuteParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "signature": {
                                "title": "signature",
                                "type": "string"
                            },
                            "partyId": {
                                "title": "partyId",
                                "type": "string"
                            },
                            "commandId": {
                                "$ref": "api-specs/openrpc-dapp-api.json#/components/schemas/CommandId"
                            },
                            "signedBy": {
                                "title": "signedBy",
                                "type": "string"
                            }
                        },
                        "required": [
                            "commandId",
                            "signature",
                            "partyId",
                            "signedBy"
                        ]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "ExecuteResult",
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "description": "Executes a signed transaction."
        },
        {
            "name": "addSession",
            "description": "Adds a network session.",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "AddSessionParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "networkId": {
                                "title": "networkId",
                                "type": "string",
                                "description": "Network Id"
                            }
                        },
                        "required": ["networkId"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "AddSessionResult",
                    "type": "object",
                    "$ref": "#/components/schemas/Session"
                }
            }
        },
        {
            "name": "removeSession",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            },
            "description": "Removes the current network session."
        },
        {
            "name": "listSessions",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "ListSessionsResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "sessions": {
                            "title": "sessions",
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Session"
                            }
                        }
                    },
                    "required": ["sessions"]
                }
            }
        },
        {
            "name": "getTransaction",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "GetTransactionParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "commandId": {
                                "$ref": "api-specs/openrpc-dapp-api.json#/components/schemas/CommandId"
                            }
                        },
                        "required": ["commandId"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "title": "GetTransactionResult",
                    "type": "object",
                    "$ref": "#/components/schemas/Transaction"
                }
            }
        },
        {
            "name": "listTransactions",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "ListTransactionsResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "transactions": {
                            "title": "transactions",
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Transaction"
                            }
                        }
                    },
                    "required": ["transactions"]
                }
            }
        },
        {
            "name": "deleteTransaction",
            "params": [
                {
                    "name": "params",
                    "schema": {
                        "title": "DeleteTransactionParams",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "commandId": {
                                "$ref": "api-specs/openrpc-dapp-api.json#/components/schemas/CommandId"
                            }
                        },
                        "required": ["commandId"]
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "$ref": "#/components/schemas/Null"
                }
            },
            "description": "Deletes a pending transaction. Only transactions with status 'pending' can be deleted."
        },
        {
            "name": "getUser",
            "description": "Returns information about the current user, including whether they are an admin.",
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "title": "GetUserResult",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "userId": {
                            "title": "userIdentifier",
                            "type": "string",
                            "description": "The unique identifier of the current user."
                        },
                        "isAdmin": {
                            "title": "isAdminFlag",
                            "type": "boolean",
                            "description": "Whether the current user is an admin."
                        }
                    },
                    "required": ["userId", "isAdmin"]
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "Null": {
                "title": "Null",
                "type": "null",
                "description": "Represents a null value, used in responses where no data is returned."
            },
            "Network": {
                "title": "Network",
                "type": "object",
                "description": "Structure representing the Networks",
                "properties": {
                    "id": {
                        "title": "networkId",
                        "type": "string",
                        "description": "Network ID"
                    },
                    "name": {
                        "title": "name",
                        "type": "string",
                        "description": "Name of network"
                    },
                    "description": {
                        "title": "description",
                        "type": "string",
                        "description": "Description of network"
                    },
                    "synchronizerId": {
                        "title": "synchronizerId",
                        "type": "string",
                        "description": "Synchronizer ID"
                    },
                    "identityProviderId": {
                        "title": "identityProviderId",
                        "type": "string",
                        "description": "Identity Provider ID"
                    },
                    "auth": {
                        "$ref": "#/components/schemas/Auth"
                    },
                    "adminAuth": {
                        "$ref": "#/components/schemas/Auth"
                    },
                    "ledgerApi": {
                        "title": "ledgerApi",
                        "type": "string",
                        "description": "Ledger api url"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "description",
                    "identityProviderId",
                    "auth",
                    "ledgerApi"
                ],
                "additionalProperties": false
            },
            "Idp": {
                "title": "Idp",
                "description": "Structure representing the Identity Providers",
                "type": "object",
                "properties": {
                    "id": {
                        "title": "id",
                        "type": "string",
                        "description": "ID of the identity provider"
                    },
                    "type": {
                        "title": "type",
                        "enum": ["oauth", "self_signed"],
                        "description": "Type of identity provider (oauth / self_signed)"
                    },
                    "issuer": {
                        "title": "issuer",
                        "type": "string",
                        "description": "Issuer of identity provider"
                    },
                    "configUrl": {
                        "title": "configUrl",
                        "type": "string",
                        "description": "The configuration URL for the identity provider."
                    }
                },
                "required": ["id", "type", "issuer"],
                "additionalProperties": false
            },
            "Auth": {
                "title": "auth",
                "type": "object",
                "description": "Represents the type of auth for a specified network",
                "additionalProperties": false,
                "properties": {
                    "method": {
                        "title": "method",
                        "type": "string"
                    },
                    "scope": {
                        "title": "scope",
                        "type": "string"
                    },
                    "clientId": {
                        "title": "clientId",
                        "type": "string"
                    },
                    "clientSecret": {
                        "title": "clientSecret",
                        "type": "string"
                    },
                    "issuer": {
                        "title": "issuer",
                        "type": "string"
                    },
                    "audience": {
                        "title": "audience",
                        "type": "string"
                    }
                },
                "required": ["method", "audience", "scope", "clientId"]
            },
            "Wallet": {
                "title": "Wallet",
                "type": "object",
                "description": "Structure representing a wallet",
                "additionalProperties": false,
                "properties": {
                    "primary": {
                        "title": "primary",
                        "type": "boolean",
                        "description": "Set as primary wallet for dApp usage."
                    },
                    "partyId": {
                        "title": "partyId",
                        "type": "string",
                        "description": "The party ID corresponding to the wallet."
                    },
                    "status": {
                        "title": "walletStatus",
                        "type": "string",
                        "enum": ["initialized", "allocated"],
                        "description": "The status of the wallet."
                    },
                    "hint": {
                        "title": "hint",
                        "type": "string",
                        "description": "The party hint and name of the wallet."
                    },
                    "publicKey": {
                        "title": "publicKey",
                        "type": "string",
                        "description": "The public key of the party."
                    },
                    "namespace": {
                        "title": "namespace",
                        "type": "string",
                        "description": "The namespace of the party."
                    },
                    "networkId": {
                        "title": "networkId",
                        "type": "string",
                        "description": "The network ID the wallet corresponds to."
                    },
                    "signingProviderId": {
                        "title": "signingProviderId",
                        "type": "string",
                        "description": "The signing provider ID the wallet corresponds to."
                    },
                    "externalTxId": {
                        "title": "externalTxId",
                        "type": "string",
                        "description": "Unique identifier of the signed transaction given by the Signing Provider. This may not be the same as the internal txId given by the Wallet Gateway."
                    },
                    "topologyTransactions": {
                        "title": "topologyTransactions",
                        "type": "string",
                        "description": "The topology transactions"
                    },
                    "disabled": {
                        "title": "disabled",
                        "type": "boolean",
                        "description": "Whether the wallet is disabled. Wallets are disabled when no signing provider matches the party's namespace during sync. Disabled wallets use participant as the default signing provider."
                    },
                    "reason": {
                        "title": "reason",
                        "type": "string",
                        "description": "Reason for the wallet state, e.g., 'no signing provider matched'."
                    }
                },
                "required": [
                    "primary",
                    "partyId",
                    "status",
                    "hint",
                    "publicKey",
                    "namespace",
                    "networkId",
                    "signingProviderId"
                ]
            },
            "WalletRemovedInfo": {
                "title": "WalletRemovedInfo",
                "type": "object",
                "description": "Indicates a wallet was removed because the external signing transaction failed or was rejected.",
                "additionalProperties": false,
                "properties": {
                    "partyId": {
                        "title": "partyId",
                        "type": "string",
                        "description": "The party ID of the removed wallet."
                    },
                    "txStatus": {
                        "title": "removedTxStatus",
                        "type": "string",
                        "enum": ["failed", "rejected"],
                        "description": "The status of the external signing transaction that caused removal."
                    }
                },
                "required": ["partyId", "txStatus"]
            },
            "WalletFilter": {
                "title": "WalletFilter",
                "type": "object",
                "description": "Filter for wallets",
                "additionalProperties": false,
                "properties": {
                    "networkIds": {
                        "title": "networkIds",
                        "type": "array",
                        "description": "Filter wallets by network IDs.",
                        "items": {
                            "title": "networkId",
                            "type": "string"
                        }
                    },
                    "signingProviderIds": {
                        "title": "signingProviderIds",
                        "type": "array",
                        "description": "Filter wallets by signing provider IDs.",
                        "items": {
                            "title": "signingProviderId",
                            "type": "string"
                        }
                    }
                }
            },
            "Session": {
                "title": "Session",
                "type": "object",
                "description": "Structure representing the connected network session",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "title": "id",
                        "type": "string",
                        "description": "The unique identifier of the session."
                    },
                    "network": {
                        "$ref": "#/components/schemas/Network"
                    },
                    "idp": {
                        "$ref": "#/components/schemas/Idp"
                    },
                    "accessToken": {
                        "title": "accessToken",
                        "type": "string",
                        "description": "The access token for the session."
                    },
                    "status": {
                        "title": "status",
                        "type": "string",
                        "enum": ["connected", "disconnected"]
                    },
                    "reason": {
                        "title": "reason",
                        "type": "string",
                        "description": "The reason for the current status."
                    }
                },
                "required": ["network", "idp", "status", "accessToken", "id"]
            },
            "SigningProviderContext": {
                "title": "SigningProviderContext",
                "type": "object",
                "description": "Indicates that the wallet has been created in the database but hasn't yet been allocated by the participant.",
                "additionalProperties": false,
                "properties": {
                    "partyId": {
                        "title": "partyId",
                        "type": "string",
                        "description": "The party ID corresponding to the wallet."
                    },
                    "externalTxId": {
                        "title": "externalTxId",
                        "type": "string",
                        "description": "The transaction ID"
                    },
                    "topologyTransactions": {
                        "title": "topologyTransactions",
                        "type": "string",
                        "description": "The topology transactions"
                    },
                    "namespace": {
                        "title": "namespace",
                        "type": "string",
                        "description": "The namespace of wallet"
                    }
                },
                "required": [
                    "partyId",
                    "externalTxId",
                    "topologyTransactions",
                    "namespace"
                ]
            },
            "Transaction": {
                "title": "Transaction",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "commandId": {
                        "$ref": "api-specs/openrpc-dapp-api.json#/components/schemas/CommandId"
                    },
                    "status": {
                        "title": "status",
                        "type": "string",
