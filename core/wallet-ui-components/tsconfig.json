{
    "extends": "../../tsconfig.web.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "module": "esnext",
        "moduleResolution": "bundler"
    },
    "include": ["src"],
    "exclude": ["**/*.stories.ts", "**/*.stories.js"]
}
