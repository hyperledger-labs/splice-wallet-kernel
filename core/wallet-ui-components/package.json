{
    "name": "@canton-network/core-wallet-ui-components",
    "version": "0.5.0",
    "type": "module",
    "description": "Reusable UI components for the Splice wallet",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "author": "Marc Juchli <marc.juchli@digitalasset.com>",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./themes": "./themes"
    },
    "scripts": {
        "build": "vite build && tsc --emitDeclarationOnly",
        "build:watch": "vite build --watch & tsc --emitDeclarationOnly --watch",
        "typecheck": "tsc --noEmit",
        "clean": "tsc -b --clean; rm -rf dist",
        "dev": "vite --port 8000"
    },
    "devDependencies": {
        "@types/bootstrap": "^5",
        "@types/fs-extra": "^11",
        "fs-extra": "^11.3.2",
        "tsx": "^4.20.4",
        "typescript": "^5.8.3",
        "vite": "^6.3.5"
    },
    "packageManager": "yarn@4.9.4",
    "dependencies": {
        "@canton-network/core-types": "workspace:^",
        "@canton-network/core-wallet-store": "workspace:^",
        "@popperjs/core": "^2.11.8",
        "bootstrap": "^5.3.7",
        "lit": "^3.3.0"
    },
    "files": [
        "dist/**",
        "themes/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
