{
    "name": "@canton-network/core-wallet-ui-components",
    "version": "0.21.0",
    "type": "module",
    "description": "Reusable UI components for the Splice wallet",
    "license": "Apache-2.0",
    "author": "Marc Juchli <marc.juchli@digitalasset.com>",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./index.css": "./dist/index.css",
        "./themes": "./themes"
    },
    "scripts": {
        "build": "vite build && tsc -p tsconfig.types.json",
        "build:watch": "vite build --watch & tsc --emitDeclarationOnly --watch",
        "typecheck": "tsc --noEmit",
        "flatpack": "yarn pack --out \"$FLATPACK_OUTDIR\"",
        "clean": "tsc -b --clean; rm -rf dist",
        "dev": "storybook dev -p 6006"
    },
    "devDependencies": {
        "@storybook/web-components-vite": "^10.2.0",
        "@types/bootstrap": "^5.2.10",
        "@types/fs-extra": "^11.0.4",
        "fs-extra": "^11.3.3",
        "storybook": "^10.2.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4"
    },
    "packageManager": "yarn@4.9.4",
    "dependencies": {
        "@canton-network/core-tx-visualizer": "workspace:^",
        "@canton-network/core-types": "workspace:^",
        "@canton-network/core-wallet-auth": "workspace:^",
        "@canton-network/core-wallet-store": "workspace:^",
        "@canton-network/core-wallet-user-rpc-client": "workspace:^",
        "@popperjs/core": "^2.11.8",
        "bootstrap": "^5.3.8",
        "lit": "^3.3.2"
    },
    "files": [
        "dist/**",
        "themes/**"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hyperledger-labs/splice-wallet-kernel.git",
        "directory": "core/wallet-ui-components"
    }
}
