{
    "name": "@canton-network/core-wallet-ui-components",
    "version": "0.8.0",
    "type": "module",
    "description": "Reusable UI components for the Splice wallet",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "license": "Apache-2.0",
    "author": "Marc Juchli <marc.juchli@digitalasset.com>",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./index.css": "./dist/index.css",
        "./themes": "./themes"
    },
    "scripts": {
        "build": "vite build && tsc -p tsconfig.types.json",
        "build:old": "vite build && yarn workspace @canton-network/core-wallet-ui-components tsc --emitDeclarationOnly",
        "build:watch": "vite build --watch & tsc --emitDeclarationOnly --watch",
        "typecheck": "tsc --noEmit",
        "flatpack": "yarn pack --out \"$FLATPACK_OUTDIR\"",
        "clean": "tsc -b --clean; rm -rf dist",
        "dev": "storybook dev -p 6006"
    },
    "devDependencies": {
        "@storybook/web-components-vite": "^9.1.10",
        "@types/bootstrap": "^5",
        "@types/fs-extra": "^11",
        "fs-extra": "^11.3.2",
        "storybook": "^9.1.10",
        "tsx": "^4.20.4",
        "typescript": "^5.8.3",
        "vite": "^6.4.1"
    },
    "packageManager": "yarn@4.9.4",
    "dependencies": {
        "@canton-network/core-types": "workspace:^",
        "@canton-network/core-wallet-store": "workspace:^",
        "@popperjs/core": "^2.11.8",
        "bootstrap": "^5.3.7",
        "lit": "^3.3.0"
    },
    "files": [
        "dist/**",
        "themes/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
