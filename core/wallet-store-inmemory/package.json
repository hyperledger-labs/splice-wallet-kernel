{
    "name": "@canton-network/core-wallet-store-inmemory",
    "version": "0.15.0",
    "type": "module",
    "description": "In-memory implementation of the Store API",
    "repository": "github:hyperledger-labs/splice-wallet-kernel",
    "author": "Marc Juchli <marc.juchli@digitalasset.com>",
    "license": "Apache-2.0",
    "packageManager": "yarn@4.9.4",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup && tsc -p tsconfig.types.json",
        "dev": "tsup --watch --onSuccess \"tsc -p tsconfig.types.json\"",
        "flatpack": "yarn pack --out \"$FLATPACK_OUTDIR\"",
        "clean": "tsc -b --clean; rm -rf dist",
        "test": "yarn node --experimental-vm-modules $(yarn bin jest)"
    },
    "dependencies": {
        "@canton-network/core-ledger-client": "workspace:^",
        "@canton-network/core-rpc-errors": "workspace:^",
        "@canton-network/core-types": "workspace:^",
        "@canton-network/core-wallet-auth": "workspace:^",
        "@canton-network/core-wallet-store": "workspace:^",
        "pino": "^10.1.0",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@swc/core": "^1.15.3",
        "@swc/jest": "^0.2.39",
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0",
        "pino-test": "^1.1.0",
        "ts-jest": "^29.4.5",
        "ts-jest-resolver": "^2.0.1",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    },
    "files": [
        "dist/**"
    ],
    "publishConfig": {
        "access": "public"
    }
}
